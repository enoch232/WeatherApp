
<%= div_for search do %>
<div class = "" style = "width:61rem;margin:1rem 1rem 1rem 1rem;height:300px;border-radius:1rem 1rem 1rem 1rem;float:left">
	<div class = "temperature" style = "background-color:#263238;height:300px;width:66%;float:left;color:white;text-align:center;font-size:8rem;padding:5rem 0 0 0;border-radius:1rem 0rem 0rem 1rem;">
		<div style = "font-size:1.5rem;"><%= search.city %>, <%= search.state %></div>
	</div>
	<div style = "height:300px;width:33%;float:left">
		<div style = "background-color:#CFD8DC;height:200px;width:100%;border-radius:0 1rem 0 0">
			<span style = "float:right"><%= link_to "X", search, method: :delete, remote: true , style: "color:white" , class: "btn btn-danger" %></span>
			<div class ="weatherimage">

			</div>
		</div>
		<div style = "background-color:#2196F3;height:100px;width:100%;border-radius:0 0rem 1rem 0rem;">
			<span style = "margin:1rem"><%= image_tag "wind.png" %> <span style = "width:1rem;color:white" class = "wind"></span></span>

		</div>
	</div>
	
</div>
<% end %>
