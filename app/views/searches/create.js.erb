
$('#showweather').append("<%= j render 'search' , search: @search  %>");

$.getJSON('https://query.yahooapis.com/v1/public/yql?q=select%20*%20from%20weather.forecast%20where%20woeid%20in%20(select%20woeid%20from%20geo.places(1)%20where%20text%3D%22<%= @search.city %>%2C%20<%= @search.state %>%22)&format=json&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys', function(a){

	$("#<%= dom_id(@search) %> .temperature").append(a.query.results.channel.item.condition.temp+"&#8457;");
	$("#<%= dom_id(@search) %> .wind").append(a.query.results.channel.wind.speed + " mph");
	var condition = a.query.results.channel.item.condition.code;
	switch(condition){
		//case 0:
		//case 1:
		//case 2:
		//case 3:
		//case 4:
		//
		case '6':
		case '10':
			$("#<%= dom_id(@search) %> .weatherimage").append('<%= image_tag "rainy.png" , style: "margin:0 4rem" %>');
			break;
	//	case 8:
	//	case 9:
	//	
	//	case 11:
	//	case 12:
		case '5':
		case '7':
		case '13':
		case '14':
		case '15':
		case '16':
		case '35':
		case '41':
		case '42':
		case '43':
			$("#<%= dom_id(@search) %> .weatherimage").append('<%= image_tag "snowy.png" , style: "margin:0 4rem" %>');
			break;
	//	case 17:
	//	case 18:
	//	case 19:
	//	case 20:
	//	case 21:
	//	case 22:
	//	case 23:
	//	case 24:
	//	case 25:
		case '26':
		case '27':
		case '28':
		case '29':
		case '30':
			$("#<%= dom_id(@search) %> .weatherimage").append('<%= image_tag "cloudy.png" , style: "margin:0 4rem" %>');
			break;
		case '31':
			$("#<%= dom_id(@search) %> .weatherimage").append('<%= image_tag "sunny.png" , style: "margin:0 4rem" %>');
			break;
	//	case 32:
